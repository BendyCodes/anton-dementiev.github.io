header.header
  a.header__logo(href="#{path}index.html")
    +fundemic-logo

  nav.header__nav
    a.header__link.header__link--nav(href="#{path}index.html") Home
    a.header__link.header__link--nav(href="#{path}projects.html") Projects
    a.header__link.header__link--nav(href="#{path}about.html") About
    a.header__link.header__link--nav(href="#{path}in-house.html") In-House

  .header__contact

    //-parameters of button mixin:
       1) text of the button
       2) modificator of the button
       3) unique id for main button
       4) unique id for secondary button that fakes stroke
       5) dx attribute that helps to align svg text horizontally
       6) dy attribute that helps to align svg text vertically
       7) link of the button

    +button(
      text='Contact',
      modificator='--small animated-button--white animated-button--notmenu',
      id='-header-1',
      id2='-header-2',
      dx='0',
      dy='8',
      link='#{path}contact.html'
    )

  button.header__menu-button.hamburger.hamburger--elastic(type='button')
    span.hamburger-box
      span.hamburger-inner

.header__menu-mobile(style="visibility: hidden")
  a.header__menu-mobile-link(href="#{path}index.html")
    | Home
  a.header__menu-mobile-link(href="#{path}projects.html")
    | Projects
  a.header__menu-mobile-link(href="#{path}about.html")
    | About
  a.header__menu-mobile-link(href="#{path}in-house.html")
    | In-House
  a.header__menu-mobile-link(href="#{path}about.html")
    | Privacy
  a.header__menu-mobile-link(href="#{path}privacy.html")
    | Terms
  a.header__menu-mobile-link.header__menu-mobile-link--contact(href="#{path}terms.html")
    | Contact