//- Including mixins and extending default layout for html page.
include ../../templates/general/_mixins
extends ../../templates/general/_layout


//- Inserting main data into page.
block config
  -
    var
      path = '../../'
      pageTitle = 'Hatch The Unicorn'
      footerType = 'footer--bg-orange'
      gameTitle = 'hatch-the-unicorn'
      gameContainer = 'HatchTheUnicorn'
      description = 'Match raindrops to grow your very own unicorn!  Swipe to move the colorful tiles. When two adjacent tiles touch, they merge into one.'

block scripts-head
  script(src="./src/lq/Mejdu.min.js")
